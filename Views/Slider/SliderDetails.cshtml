@model EducationPortal.Models.tblSlider

@{
    ViewData["Title"] = "SliderDetails";
}

<div>
    <h4>Slider Details</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PageName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PageName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Image)
        </dt>
        <dd class = "col-sm-10">
            <img src="~/Images/@Model.Image" width="100" height="100" />
        </dd>
    </dl>
</div>

<div class="row">
    @Html.ActionLink("Update", "SaveSlider", new { id = Model.SliderID }, new { @class = "btn btn-primary" }) &nbsp;
    @Html.ActionLink("Back", "Index", "Slider", null, new { @class = "btn btn-danger" })
</div>
