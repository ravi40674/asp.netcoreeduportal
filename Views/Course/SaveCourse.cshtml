@model EducationPortal.ViewModel.CourseViewModel

@{
    ViewData["Title"] = "SaveCourse";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section style{
    <style>
        img {
            height: 100px;
            width: 100px;
        }

        .closeDiv {
            width: 20px;
            height: 21px;
            background-color: rgb(35, 179, 119);
            cursor: pointer;
            color: white;
            box-shadow: 2px 2px 7px rgb(74, 72, 72);
            text-align: center;
            margin: 5px;
            right: 0px;
        }

        .pDiv {
            width: 100%
        }

        .divThumbnail {
        }
    </style>
}


<br />
@if (TempData["fail"] != null)
{
    <div class="alert alert-danger alert-dismmissible text-center">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        <strong>Error!</strong> @TempData["fail"]
    </div>
}
<div class="container">
    <div class="row">
        <div class="col-sm-5">
            <div class="page-title-box">
                <h4 class="page-title">@(Model.CourseID==0 ? "Add":"Update") Course</h4>
            </div>
        </div>
    </div>
    <div>
        <form asp-action="SaveCourse" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" hidden>
                <label asp-for="CourseID" class="control-label"></label>
                <input asp-for="CourseID" class="form-control" />
                <span asp-validation-for="CourseID" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="CategoryID" class="control-label"></label>
                <select asp-for="CategoryID" class="form-control" asp-items="ViewBag.Category">
                    <option value="0">Child Category</option>
                </select>
                <span asp-validation-for="CategoryID" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" maxlength="100" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="ParentId" class="control-label"></label>
                <select asp-for="ParentId" class="form-control" asp-items="ViewBag.Parent">
                    <option value="0">Main Menu</option>
                </select>
                <span asp-validation-for="ParentId" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="DisplayName" class="control-label"></label>
                <input asp-for="DisplayName" maxlength="100" class="form-control" />
                <span asp-validation-for="DisplayName" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Image" class="control-label"></label>
            </div>
            <div class="form-group col-md-4">
                <input type="hidden" asp-for="imgurl" />
                <div id="thumbnail">
                    <div class="divThumbnail">
                        @if (!string.IsNullOrEmpty(Model.imgurl))
                        {
                            <img src="~/ApplicationDocument/CourseImages/@Model.imgurl" class="imgs" />
                            <div class="closeDiv" style="float: left;">X</div>
                        }
                    </div>
                </div>
                <input asp-for="Image" accept="Image/*" id="upload-file" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" checked asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                </label>
            </div>
            <div class="row">
                &nbsp;&nbsp;
                <div class="form-group">
                    <input type="submit" value="@(Model.CourseID==0 ? "Add":"Update")" class="btn btn-primary" />
                </div>
                &nbsp;
                <div class="form-group">
                    @Html.ActionLink("Back", "Index", "Course", null, new { @class = "clsButtonFake btn btn-danger" })
                </div>
            </div>
        </form>
    </div>
</div>

@section scripts{
    <script src="~/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script>
        jQuery(function ($) {
            @if (!string.IsNullOrEmpty(Model.imgurl)) {
                @:$("#upload-file").hide();
            }
            $('div').on('click', '.closeDiv', function () {
                $(this).prev().remove();
                $(this).remove();
                $("#upload-file").show();
            });

            var fileInput = document.getElementById("upload-file");

            fileInput.addEventListener("change", function (e) {

                var filesVAR = this.files;

                $('#thumbnail').html("");
                showThumbnail(filesVAR);
            }, false);
            function showThumbnail(files) {
                var file = files[0]

                var $thumbnail = $('#thumbnail').get(0);

                var $image = $("<img> ", {
                    class: "imgThumbnail"
                });
                var $pDiv = $("<div>", {
                    class: "divThumbnail",
                    style: "float: left"
                });
                var $div = $("<div>", {
                    class: "closeDiv",
                    style: "float: right"
                }).html('X');

                $pDiv.append($image, $div).appendTo($thumbnail);
                var reader = new FileReader()
                reader.onload = function (e) {
                    $image[0].src = e.target.result;
                }
                var ret = reader.readAsDataURL(file);
                var canvas = document.createElement("canvas");
                ctx = canvas.getContext("2d");
                $image.on('load', function () {
                    ctx.drawImage($image[0], 100, 100);
                })
            }
        });
    </script>
}

