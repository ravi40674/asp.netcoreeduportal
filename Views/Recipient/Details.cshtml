@model EducationPortal.Models.tblRecipient

@{
    ViewData["Title"] = "Details";
}


<div>
    <h4>Recipient Details</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>
        <dd class = "col-sm-10">
            @(Model.IsActive ? "Active":"Inactive")
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Update", "Save", "Recipient", new { id = Model.RecipientID }, new { @class = "btn btn-primary" })&nbsp;
    @Html.ActionLink("Back", "Index", "Recipient", null, new { @class = "btn btn-danger" })
</div>
