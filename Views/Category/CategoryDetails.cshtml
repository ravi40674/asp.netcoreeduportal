@model EducationPortal.Models.tblCategory

@{
    ViewData["Title"] = "CategoryDetails";
}

<div>
    <h4>Category Details</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">Status
        </dt>
        <dd class="col-sm-10">
            @(Model.IsActive ? "Active":"Inactive")
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Update", "Category", "Role", new { id = Model.CategoryID }, new { @class = "btn btn-primary" })
    @Html.ActionLink("Back", "Index", "Category", null, new { @class = "clsButtonFake btn btn-danger" })
</div>
