@model EducationPortal.ViewModel.CommonMessagesViewModel
@using EducationPortal.Common
@if (Context.Request.Query["Msg"].ToString() != null && Context.Request.Query["Msg"].ToString().ToLower() == "userinuse")
{
    <div class="alert alert-danger mtp10 alert-cus">
        @Html.Raw(string.Format(Messages.IsInUse, Convert.ToString(Model.ModuleName)))
    </div>
}
else if (Context.Request.Query["Msg"].ToString() != null && Context.Request.Query["Msg"].ToString().ToLower() == "inuse")
{
    <div class="alert alert-danger mtp10 alert-cus">
        @Html.Raw(string.Format(Messages.IsInUse, Convert.ToString(Model.ModuleName.ToLower())))
    </div>
}
