{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @Html.Raw(string.Format(Messages.Added, Convert.ToString(Model.ModuleName)))
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
else if (Context.Request.Query["Msg"].ToString() != null && Context.Request.Query["Msg"].ToString().ToLower() == "emailsent")
{
    <div class="alert alert-success mtp10 alert-cus" id="logout">
