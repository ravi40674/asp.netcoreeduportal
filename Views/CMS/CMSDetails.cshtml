@model EducationPortal.Models.tblCMS

@{
    ViewData["Title"] = "CMSDetails";
}

<style>
    .makes-icon {
        width: 55px;
        margin-bottom: 25px;
    }
    .tel-orange {
        background-color: #FD5F00;
        border-radius: 10px;
        text-align: center;
        padding: 25px;
    }
    .support-h6 {
        color: #ffffff;
    }

    .support-p {
        color: #ffffff;
    }
    .support-icon {
        width: 60px;
        margin-bottom: 18px;
    }
    .com-ser {
        text-align: center;
        margin-bottom: 30px;
    }
    .com-ser-icon {
        width: 60px;
        margin-bottom: 20px;
    }
    .uni-parents {
        background-color: #ffffff;
        border: 1px solid #E9E9E9;
        border-radius: 10px;
        text-align: center;
        padding: 45px 10px;
    }
    .uni-main-box {
        padding: 15px 15px;
    }
        .uni-main-box img {
            max-width: 180px;
            margin: auto;
        }
    .blog-post-parents {
        border: 1px solid #E9E9E9;
        border-radius: 10px;
    }

        .blog-post-parents img {
            max-width: 100%;
            border-radius: 10px;
        }

    .scribe-btn {
        padding: 10px 30px;
        background-color: #FD5F00;
        color: #ffffff;
        border: 0px;
        border-bottom-right-radius: 10px;
        border-top-right-radius: 10px;
    }
    .input-width {
        height: calc(2.4em + 0.75rem + 2px);
        border: 1px solid #E9E9E9;
        border-top-left-radius: 10px;
        border-bottom-left-radius: 10px;
    }
</style>

<div>
    <h4>CMS Details</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PageName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PageName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model=>model.PageContent)
        </dt>
        <dd class = "col-sm-10">
            @Html.Raw(Model.PageContent)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Keyword)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Keyword)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
Status        </dt>
        <dd class="col-sm-10">
            @(Model.IsActive ? "Active":"Inactive")
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Update", "SaveCMS", new { id = Model.CMSId  },new { @class="btn btn-primary"})
    @Html.ActionLink("Back", "Index","CMS", null,new { @class="clsButtonFake btn btn-danger"})
</div>
